@{
	ViewData["Title"] = "Index";
}

@model BookStoreAPI.Models.StatisticView

<main id="main" class="main">

	<div class="pagetitle">
		<h1>Dashboard</h1>
		<nav>
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Home</a></li>
				<li class="breadcrumb-item active">Dashboard</li>
			</ol>
		</nav>
	</div><!-- End Page Title -->

	 <section class="section dashboard">
		<div class="row">

			<!-- Left side columns -->
			<div class="col-lg-12">
				<div class="row">

					<!-- Sales Card -->
					<div class="col-xxl-6 col-md-6">
						<div class="card info-card sales-card">
							<div class="card-body">
								<h5 class="card-title">Sales <span>| Today</span></h5>

								<div class="d-flex align-items-center">
									<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
										<i class="bi bi-cart"></i>
									</div>
									<div class="ps-3">
										<h6>@Model.RevenueByDay</h6>
										<span class="text-success small pt-1 fw-bold">12%</span> <span class="text-muted small pt-2 ps-1">increase</span>
									</div>
								</div>
							</div>

						</div>
					</div><!-- End Sales Card -->
					<!-- Revenue Card -->
					<div class="col-xxl-6 col-md-6">
						<div class="card info-card revenue-card">
							<div class="card-body">
								<h5 class="card-title">Revenue <span>| This Month</span></h5>

								<div class="d-flex align-items-center">
									<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
										<i class="bi bi-currency-dollar"></i>
									</div>
									<div class="ps-3">
										<h6>@Model.RevenueByMonth</h6>
										<span class="text-success small pt-1 fw-bold">8%</span> <span class="text-muted small pt-2 ps-1">increase</span>

									</div>
								</div>
							</div>

						</div>
					</div><!-- End Revenue Card -->
					<!-- Reports -->
					<div class="col-12">
						<div class="card">
							<div class="col-lg-12">
								<div class="card">
									<div class="card-body">
										<h5 class="card-title">Line Chart - Total revenue per day of the month</h5>
										<!-- Line Chart -->
										<div id="lineChart"></div>
										<!-- End Line Chart -->

									</div>
								</div>
							</div>
							<div class="col-lg-12">
								<div class="card">
									<div class="card-body">
										<h5 class="card-title">Bar Chart - Statistics on the number of products by each category</h5>

										<!-- Bar Chart -->
										<canvas id="barChart" style="max-height: 400px;"></canvas>									
										<!-- End Bar CHart -->

									</div>
								</div>
							</div>
							<div class="col-lg-12">
								<div class="card">
									<div class="card-body">
										<h5 class="card-title">Pie Chart - Statistics on the number of products by each publisher</h5>

										<!-- Pie Chart -->
										<div id="pieChart"></div>
										<!-- End Pie Chart -->

									</div>
								</div>
							</div>
						</div>
					</div><!-- End Reports -->
					<!-- Top Selling -->
					<div class="col-12">
						<div class="card top-selling overflow-auto">

							<div class="card-body pb-0">
								<h5 class="card-title">Top Selling - Top most purchased products</h5>

								<table class="table table-borderless">
									<thead>
										<tr>
											<th scope="col">Preview</th>
											<th scope="col">Product</th>
											<th scope="col">Price</th>
											<th scope="col">Sold</th>
											<th scope="col">Revenue</th>
										</tr>
									</thead>
									<tbody id="table_bestselling">
																		
									</tbody>
								</table>

							</div>

						</div>
					</div><!-- End Top Selling -->

				</div>
			</div><!-- End Left side columns -->

		</div><!-- End Right side columns -->
	</section> 
</main><!-- End #main -->
@section Scripts{
	<script src="~/js/js-admin/main.js"></script>
	<script src="~/js/dashboard.js"></script>

}


