					<div class="col-lg-2 col-md-6">
						<div class="footer-widget mb-40">
							<h3 class="footer-widget-title-2">Shopping</h3>
							<div class="footer-widget-content-2">
								<ul>
									<li><a href="#">How to buy</a></li>
									<li><a href="#">Payments</a></li>
									<li><a href="#">Shipment</a></li>
									<li><a href="#">FAQ</a></li>
									<li><a href="#">Terms & Condition</a></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-lg-4 col-md-6">
						<div class="footer-widget mb-40 pl-30">
							<h3 class="footer-widget-title-2">Find US</h3>
							<iframe class="footer-map"
									src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62860.62287780169!2d105.71637040029258!3d10.034268928830112!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a0629f6de3edb7%3A0x527f09dbfb20b659!2zQ-G6p24gVGjGoSwgTmluaCBLaeG7gXUsIEPhuqduIFRoxqEsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1695227791590!5m2!1svi!2s">
							</iframe>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="footer-bottom  gray-bg-6 ptb-20">
			<div class="container">
				<div class="row">
					<div class="col-lg-6 col-md-6">
						<div class="copyright-2">
							<p>
								Copyright ©
								<a asp-controller="Home" asp-action="Index">Book WonderLan</a> 2023 . All Right Reserved.
							</p>
						</div>
					</div>
					<div class="col-lg-6 col-md-6">
						<div class="payment-img">
							<img src="~/img/icon-img/3.png" alt="">
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!-- all js here -->
	<script src="~/js/vendor/jquery-1.12.4.min.js"></script>
	<script src="~/js/popper.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.magnific-popup.min.js"></script>
	<script src="~/js/isotope.pkgd.min.js"></script>
	<script src="~/js/imagesloaded.pkgd.min.js"></script>
	<script src="~/js/jquery.counterup.min.js"></script>
	<script src="~/js/waypoints.min.js"></script>
	<script src="~/js/ajax-mail.js"></script>
	<script src="~/js/owl.carousel.min.js"></script>
	<script src="~/js/plugins.js"></script>
	<script src="~/js/main.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
	@if (SignInManager.IsSignedIn(User))
	{
		<script src="~/js/header.js"></script>
		<script src="~/js/cart.js"></script>
	}
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>