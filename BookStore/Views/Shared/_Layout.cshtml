<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<title>@ViewData["Title"] - Book WonderLand</title>

	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">
	<!-- Thêm CSS của SweetAlert -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
	<!-- Thêm JavaScript của SweetAlert -->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

	<!-- all css here -->
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/magnific-popup.css">
	<link rel="stylesheet" href="~/css/animate.css">
	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/themify-icons.css">
	<link rel="stylesheet" href="~/css/pe-icon-7-stroke.css">
	<link rel="stylesheet" href="~/css/meanmenu.min.css">
	<link rel="stylesheet" href="~/css/bundle.css">
	<link rel="stylesheet" href="~/css/style.css">
	<link rel="stylesheet" href="~/css/responsive.css">
	<script src="~/js/vendor/modernizr-3.11.7.min.js"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	@RenderSection("stylesheets", required: false)

</head>
@using BusinessObjects
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!-- header start -->
<header class="res-header-sm">
	<div class="header-top-wrapper theme-bg-2">
		<div class="container">
			<div class="header-top d-flex align-items-center">
				<div class="header-info">
					<span>Contact us - (84+) 123456789  or  <a href="#">FPTBookStore@fpt.com.vn</a></span>
				</div>
				<partial name="_LoginPartial.cshtml" />
			</div>
		</div>
	</div>
	<div class="header-bottom clearfix">
		<div class="container">
			<div class="header-bottom-wrapper">
				<div class="logo-2 ptb-30">
					<a asp-controller="Home" asp-action="Index">
						<img src="~/img/logo/logo.png" style="max-width: 130px" alt="">
					</a>
				</div>
				<div class="menu-style-2 book-menu menu-hover">
					<nav>
						<ul>
							@if (SignInManager.IsSignedIn(User))
							{
								var user = await UserManager.GetUserAsync(User);
								<li><a asp-controller="Home" asp-action="Index" asp-route-userId="@user.Id">home</a></li>
								<li><a asp-controller="Home" asp-action="Shop" asp-route-userId="@user.Id">shop</a></li>
							}
							else
							{
								<li><a asp-controller="Home" asp-action="Index">home</a></li>
								<li><a asp-controller="Home" asp-action="Shop">shop</a></li>								
							}
							<li><a asp-controller="Home" asp-action="AboutUs">about us</a></li>
							<li><a asp-controller="Home" asp-action="Contact">contact</a></li>
							<li><a asp-controller="Home" asp-action="Help">help</a></li>
						</ul>
					</nav>
				</div>
				<!-- Wishlist ICON -->
				@if (SignInManager.IsSignedIn(User))
				{
					<div class="header-cart-2" id="cart"></div>
					<div class="header-cart-2" id="wishlist"></div>
					@* PROFILE ICON *@
					<div class="header-cart-2">
						<a class="icon-cart" asp-controller="Home" asp-action="Profile">
							<i class="ti-user"></i>
						</a>
					</div>
				}
				@* ICON Search *@
				<div class="header-cart-2">
					<a class="icon-cart" href="#">
						<i class="ti-search"></i>
					</a>
					<ul class="cart-dropdown">
						<li>
							<form class="search-form" asp-controller="Home" asp-action="Search" method="get">
								<input class="search-input" type="text" name="title" placeholder="Search book">
								<button class="search-button" type="submit"><i class="ti-search"></i></button>
							</form>
							<style>
								.cart-dropdown {
									padding-bottom: 20px !important;
								}

								.search-form {
									display: flex;
									margin: 0 !important;
									padding: 0 !important;
									list-style: none;
								}

								.search-input {
									flex: 1;
									padding: 10px;
									border: 1px solid #ccc;
									border-radius: 4px;
									outline: none;
									transition: border-color 0.3s;
								}

									.search-input:focus {
										border-color: #F44344;
									}

								.search-button {
									background-color: #F44344;
									color: #fff;
									border: none;
									border-radius: 4px;
									padding: 10px 15px;
									margin-left: 10px;
									cursor: pointer;
								}

								.bi-suit-heart-fill {
									color: red;
								}
							</style>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="mobile-menu-area d-md-block col-md-12 col-lg-12 col-12 d-lg-none d-xl-none">
				<div class="mobile-menu">
					<nav id="mobile-menu-active">
						<ul class="menu-overflow">
							<li><a asp-controller="Home" asp-action="Index">home</a></li>
							<li><a asp-controller="Home" asp-action="Shop">shop</a></li>
							<li><a asp-controller="Home" asp-action="AboutUs">about us</a></li>
							<li><a asp-controller="Home" asp-action="Contact">contact</a></li>
							<li><a asp-controller="Home" asp-action="Help">help me</a></li>
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
	</div>
</header>
<body>
	@RenderBody()
