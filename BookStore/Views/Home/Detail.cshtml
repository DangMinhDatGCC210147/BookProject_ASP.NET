								</a>
							</div>
						</div>

						<div class="product-content">
							<div class="product-rating-2">
								@GenerateStarRating(book.Rate, 5)
							</div>
							<h4><a href="#">@book.Title</a></h4>
							<span>$@book.SellingPrice</span>
						</div>
					</div>
				}


