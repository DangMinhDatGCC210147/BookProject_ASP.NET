						</div>
					</div>
				</div>
			</div>
			<div class="col-md-12 col-lg-5 col-12">
				<div class="product-details-content">
					<h3>@Model.Id</h3>
					<div class="rating-number">
						<div class="quick-view-rating">
							<i class="pe-7s-star red-star"></i>
							<i class="pe-7s-star red-star"></i>
							<i class="pe-7s-star"></i>
							<i class="pe-7s-star"></i>
							<i class="pe-7s-star"></i>
						</div>
						<div class="quick-view-number">
							<span>2 Ratting (S)</span>
						</div>
					</div>
					<div class="details-price">
						<span>$@Model.SellingPrice</span>
					</div>
					<p>@Model.Description</p>
					<div class="quickview-plus-minus">
						<div class="cart-plus-minus">
							<div class="inc qtybutton">+</div>
							<div class="inc qtybutton">-</div>
							<input type="text" value="02" name="qtybutton" id="quantity" class="cart-plus-minus-box">
						</div>
						<div class="quickview-btn-cart">
							<a class="btn-hover-black" onclick="AddToCart(@Model.Id)">add to cart</a>
						</div>
						<div class="quickview-btn-wishlist">
							<a class="btn-hover" href="#"><i class="pe-7s-like"></i></a>
						</div>
					</div>
					<div class="product-details-cati-tag mt-35">
						<ul>
							<li class="categories-title">Genre :</li>
							<li><a href="#">@Model.Genre</a></li>
						</ul>
						<ul>
							<li class="categories-title">Publisher :</li>
							<li><a href="#">@Model.Publisher</a></li>
						</ul>
						<ul>
							<li class="categories-title">Publisher Year :</li>
							<li><a href="#">@Model.PublicationYear</a></li>
						</ul>
						<ul>
							<li class="categories-title">Author :</li>
							<li><a href="#">@Model.Author</a></li>
						</ul>
						<ul>
							<li class="categories-title">ISBN :</li>
							<li><a href="#">@Model.ISBN</a></li>
						</ul>
						<ul>
							<li class="categories-title">Page Count :</li>
							<li><a href="#">@Model.PageCount</a></li>
						</ul>
						<ul>
							<li class="categories-title">Language :</li>
							<li><a href="#">@Model.Language</a></li>
						</ul>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="product-description-review-area pb-90">
	<div class="container">
		<div class="product-description-review text-center">
			<div class="description-review-title nav" role=tablist>
				<a href="#pro-review" data-bs-toggle="tab" role="tab" aria-selected="false">
					Reviews (0)
