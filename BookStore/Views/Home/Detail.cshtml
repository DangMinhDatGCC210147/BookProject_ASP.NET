					</div>
					<div class="details-price">
						<span>$@Model.SellingPrice</span>
					</div>
					<p>@Model.Description</p>
					<div class="quickview-plus-minus">
						<div class="cart-plus-minus">
                            <div class="inc qtybutton">+</div>
							<input type="text" value="02" name="qtybutton" id="quantity" class="cart-plus-minus-box">
							<div class="inc qtybutton">-</div>			
						</div>
						<div class="quickview-btn-cart">
							<a class="btn-hover-black" onclick="AddToCart(@Model.Id)">add to cart</a>
						</div>
						<div class="quickview-btn-wishlist">
							<a class="btn-hover" href="#"><i class="pe-7s-like"></i></a>
						</div>
					</div>
					<div class="product-details-cati-tag mt-35">
						<ul>
							<li class="categories-title">Genre :</li>
							<li><a href="#">@Model.Genre</a></li>
						</ul>
						<ul>
							<li class="categories-title">Publisher :</li>
							<li><a href="#">@Model.Publisher</a></li>
						</ul>
						<ul>
							<li class="categories-title">Publisher Year :</li>
							<li><a href="#">@Model.PublicationYear</a></li>
						</ul>
						<ul>
							<li class="categories-title">Author :</li>
							<li><a href="#">@Model.Author</a></li>
						</ul>
						<ul>
							<li class="categories-title">ISBN :</li>
							<li><a href="#">@Model.ISBN</a></li>
						</ul>
						<ul>
							<li class="categories-title">Page Count :</li>
							<li><a href="#">@Model.PageCount</a></li>
						</ul>
						<ul>
							<li class="categories-title">Language :</li>
							<li><a href="#">@Model.Language</a></li>
						</ul>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
@* //FORM POPUP *@
<div class="container">
	<div class="box-comment">
		<h2>Leave your comments here</h2>
		<form method="POST" id="reviewForm">
			<div class="mb-3">
				<label for="comment" class="form-label">Comment</label>
				<textarea class="form-control" id="comment" rows="3"></textarea>
			</div>
			<div class="mb-3">
				<label for="rate" class="form-label">Rate</label><br>
				<div class="rating">
					<i class="fas fa-star" data-rating="5"></i>
					<i class="fas fa-star" data-rating="4"></i>
					<i class="fas fa-star" data-rating="3"></i>
					<i class="fas fa-star" data-rating="2"></i>
					<i class="fas fa-star" data-rating="1"></i>
				</div>
				<input type="hidden" name="rating" id="selectedRating" value="">
			</div>
			<button type="submit" class="btn btn-primary submit-comment">Submit</button>
		</form>
	</div>
</div>

<style>
	.rating .fas.fa-star.selected {
		color: gold;
	}

	.box-comment{
		/* border: #7D7C7C 1px solid; */
		border-radius: 8px;
		padding: 10px;
		margin-bottom: 40px;
	}

	.review-section{
		text-align:left;
		justify-content:start;
	}

	.review {
		border-bottom: 1px solid #ccc; /* Thêm đường kẻ ngang */
